#include <stdio.h>
int main() {
	// your code goes here
	int withdraw;
	double current_balance;
	double charge=0.50;
	double after_balance;
	scanf("%d",&withdraw);
	scanf("%lf",&current_balance);
		if ((withdraw% 5 == 0 ) && ((withdraw + charge) <= current_balance))
	{after_balance =  current_balance- (withdraw+ charge);
	    printf("%.2lf", after_balance);
	}
	else
	{
	    after_balance = current_balance;
	    printf("%.2lf", after_balance);
	}
	
	return 0;
}
